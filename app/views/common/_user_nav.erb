<% if current_user %>
	<li class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
			<%= current_user.username %>
			<b class="caret"></b>
		</a>
		<ul class="dropdown-menu">
			<li><%= link_to'會員管理', edit_registration_path(:user), :class => " icon-pencil" %></li>
			<li><%= link_to '登出', destroy_user_session_path, :method => :delete, :class => "icon-off" %></li>
		</ul>
	</li>
<% else %>
	<li><%= link_to'註冊', new_registration_path(:user) %></li>
	<li><a href="#loginModal" role="button" data-toggle="modal">登入</a></li>
<% end %>
