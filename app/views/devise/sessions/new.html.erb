<div class="ab-container" >

	<h3 class="user_title">會員登入</h3>
	<hr>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal'} ) do |f| %>

		<%= f.input :username, label:'帳號', :autofocus => true, :required => true ,:wrapper => :bootstrap %>

		<%= f.input :password, label:'密碼', hint: false, :required => true %>

		<% if devise_mapping.rememberable? %>

			<%= f.input :remember_me, :label=>'&nbsp;', inline_label:'記得我', :as => :boolean, input_html: { value: '1' }  %>

		<% end %>

	<div class="control-group">
		<div class="controls"><%= f.submit "登入", :class => "btn btn-primary span3", :id => 'loginbtn' %></div>
	</div>


	<% end %>

	<%= link_to "註冊", new_registration_path(resource_name), :class => "log1" %><span>|</span>
	<%= link_to "忘記密碼?", new_password_path(resource_name), :class => "log2" %>

</div>


