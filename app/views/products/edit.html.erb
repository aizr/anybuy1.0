<div class="container">
	<h1>Editing product</h1>

	<%= form_for @product, :url => product_path(@product), :html => { :multipart => true } do |f| %>
		<%= render :partial => 'form', :locals => { :f => f } %>
		<%= f.submit "送出" %>
	<% end %>
	<%= link_to 'Show', @product %> |
	<%= link_to 'Back', products_path %>
</div>